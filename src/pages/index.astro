---
import Layout from '../layouts/Layout.astro'
import socialLinks from '../socialLinks'
import Kirby from '../images/kirby.png'
import Lan from '../images/lan.png'
import Firepit from '../images/firepit.png'
import { Image } from 'astro:assets'
---
<Layout title="slugsoc" subtitle="university of sheffield gaming society">
	<div class="w-full justify-center items-center flex flex-col">

		<div class="text-text-body flex w-3/5 max-md:flex-col max-md:items-center">
			<div class="flex flex-col items-center w-1/2 text-xl max-md:text-md max-md:w-full">	
				<div class="mb-10 max-md:mb-2">
					<h3 class="text-text-title text-center text-5xl">Welcome!</h3>
					<p class="text-3xl text-center mt-1">
						We are Sheffield University Gaming Society!
					</p>
				</div>
				<p class="w-3/4 text-center max-md:w-full max-md:mb-2">
					We cater to all sorts of gamers, whether you are a hardcore esports player, or someone who likes it a bit more casual - we have something for everyone!
				</p>

				<div class="flex flex-col w-4/5 gap-4 mt-5 max-md:mb-5">
					<a href={"/events"} class="bg-text-title text-bg-main w-full text-center rounded-lg hover:bg-bg-offset hover:text-text-title transition duration-150">
						Events
					</a>
					<a href={socialLinks.discord} class="bg-text-title text-bg-main w-full text-center rounded-lg hover:bg-bg-offset hover:text-text-title transition duration-150">
						Discord
					</a>
					<a href={"/esports"} class="bg-text-title text-bg-main w-full text-center rounded-lg hover:bg-bg-offset hover:text-text-title transition duration-150">
						Esports
					</a>
				</div>
			</div>
			<Image src={Kirby} alt={"Kirby plush"} class="w-1/2 max-md:w-full" />
		</div>
		
		<div class="flex w-3/5 max-md:flex-col max-md:gap-2 max-md:mt-2">
			<Image src={Lan} alt={"Lan Event"} class="w-1/3 max-md:w-full" />
			<Image src={Firepit} alt={"Firepit Weekly Socials"} class="w-2/3 max-md:w-full" />
		</div>
	</div>

</Layout>