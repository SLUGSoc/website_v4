---
import Image from "astro/components/Image.astro"
const { leftSide, image1, image2, image3} = Astro.props
---
{leftSide && 
    <div class="flex justify-center">
        <div class="flex border w-4/5 border-text-title bg-text-title items-center rounded-2xl m-5 pt-3 pb-3 justify-between">
            <div class="w-1/3 ml-auto">
                <Image class="border-text-body border-4 bg-bg-main rounded-xl mb-1" src={image1} alt={"Image1"} />
                <Image class="border-text-body border-4 bg-bg-main rounded-xl" src={image2} alt={"Image2"} />
            </div>
            <Image class="w-3/5 h-fit  ml-auto mr-auto border-text-body border-4 bg-bg-main rounded-xl" src={image3} alt={"Image3"} />
        </div>
    </div>
}
{!leftSide && 
    <div class="flex justify-center">
        <div class="flex border w-4/5 border-text-title bg-text-title items-center rounded-2xl m-5 pt-3 pb-3 justify-between">
            <Image class="w-3/5 h-fit ml-auto mr-auto border-text-body border-4 bg-bg-main rounded-xl" src={image3} alt={"Image3"} />
            <div class="w-1/3 mr-auto">
                <Image class="border-text-body border-4 bg-bg-main rounded-xl mb-1" src={image1} alt={"Image1"} />
                <Image class="border-text-body border-4 bg-bg-main rounded-xl" src={image2} alt={"Image2"} />
            </div>
        </div>
    </div>
}